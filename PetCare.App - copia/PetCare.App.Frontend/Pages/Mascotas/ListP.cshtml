@page
@model PetCare.App.Frontend.Pages.ListPModel
@{
}
<h1>Listado de Mascotas</h1>
<table class="table">
    @foreach (var mascota in Model.Mascotas)
    {
        <tr>
            <td>@mascota.Nombre</td>
            <td>@mascota.raza</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-mascotaId="@mascota.Id"
                title="Detalles">
                    <i class="fas fa-info-circle fa-lg"></i> </a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-mascotaId="@mascota.Id" title="Editar">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                </a>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Delete" asp-route-mascotaId="@mascota.Id" title="Borrar">
                    <i class="fas fa-location-arrow fa-lg"></i>
                </a>
            </td </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Adicionar una mascota</a>
